<meta name="viewport" content="width=device-width, initial-scale=1.0">
<header>
    
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.46.0/dist/full.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <div class="navbar bg-base-100" style="z-index: 1000000;">
        <div class="flex-1">
            <a class="btn btn-ghost normal-case text-xl" href="/">Inventory Management</a>
        </div>
        <div class="flex-none gap-2">
            <ul class="menu menu-horizontal px-1 ">
                <li tabindex="0">
                    <a class="hover:bg-info hover:text-black" >
                        Inventory
                        <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                            viewBox="0 0 24 24">
                            <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z" />
                        </svg>
                    </a>
                    <ul class="p-2 bg-base-100">
                        <li><a class="hover:bg-info hover:text-black" href="/addproduct">Add Products</a></li>
                        <li><a class="hover:bg-info hover:text-black" href="/manage">Manage</a></li>
                    </ul>
                </li>
                <li tabindex="0">
                    <a class="hover:bg-info hover:text-black">
                        Warehouse
                        <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                            viewBox="0 0 24 24">
                            <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z" />
                        </svg>
                    </a>
                    <ul class="p-2 bg-base-100">
                        <li><a class="hover:bg-info hover:text-black"  href="/showproducts">Show
                                Products</a></li>
                        <li><a class="hover:bg-info hover:text-black">Show Stocks</a></li>
                    </ul>
                </li>
    
            </ul>
            <div class="dropdown dropdown-end">
                <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                    <div class="w-10 rounded-full">
                        <img src="https://placeimg.com/80/80/people" />
                    </div>
                </label>
                <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-black rounded-box w-52">
                    <li>
                        <a class="justify-between">
                            <%= session?.user_name %>
                        </a>
                    </li>
                    <li class="dropdown-divider "></li>
                    <li><a>
                            <%= session.user?.user_cmp %>
                                <span class="badge badge-info">Company</span>
                        </a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</header>